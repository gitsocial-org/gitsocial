{
  "name": "@gitsocial/core",
  "version": "0.1.0",
  "description": "Core GitMsg protocol implementation",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./client": {
      "types": "./dist/client/index.d.ts",
      "default": "./dist/client/index.js"
    },
    "./utils": {
      "types": "./dist/utils/index.d.ts",
      "default": "./dist/utils/index.js"
    }
  },
  "files": [
    "dist/**/*"
  ],
  "scripts": {
    "build": "tsc",
    "watch": "tsc --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint . --ext .ts,.json && npm run lint:whitespace",
    "lint:fix": "eslint . --ext .ts,.json --fix && npm run lint:whitespace:fix",
    "lint:whitespace": "find . \\( -name '*.ts' -o -name '*.json' \\) -not -path './node_modules/*' -exec grep -l '[[:space:]]$' {} \\; | grep . && echo 'Trailing whitespace found!' && exit 1 || echo 'No trailing whitespace found.'",
    "lint:whitespace:fix": "find . \\( -name '*.ts' -o -name '*.json' \\) -not -path './node_modules/*' -exec sed -i '' 's/[[:space:]]*$//' {} \\;",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf **/*.js **/*.d.ts **/*.js.map"
  },
  "keywords": [
    "git",
    "gitmsg",
    "protocol",
    "decentralized"
  ],
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^24.0.15",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^6.19.0",
    "@vitest/coverage-v8": "^2.1.8",
    "eslint": "^8.56.0",
    "eslint-plugin-json": "^3.1.0",
    "typescript": "^5.3.3",
    "vitest": "^2.1.8"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "dependencies": {
    "lru-cache": "^11.0.2"
  }
}